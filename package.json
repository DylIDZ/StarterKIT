		"ioredis": "^5.9.3",
		"jsonwebtoken": "^9.0.3",
		"midtrans-client": "^1.4.3",
		"multer": "^2.0.2",
		"node-cron": "^4.2.1",
		"nodemailer": "^8.0.1",
		"pdfkit": "^0.17.2",
