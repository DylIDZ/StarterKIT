{
	"name": "universal-backend-starter-kit",
	"version": "1.0.0",
	"description": "A production-ready Universal Backend Starter Kit â€” Node.js, TypeScript, Express, Prisma, JWT, RBAC",
	"author": "",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"dev": "node --import=tsx --watch src/index.ts",
		"start": "node dist/index.js",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:migrate:prod": "prisma migrate deploy",
		"db:seed": "prisma db seed",
		"db:studio": "prisma studio",
		"db:drizzle:generate": "drizzle-kit generate",
		"db:drizzle:migrate": "drizzle-kit migrate",
		"db:drizzle:push": "drizzle-kit push",
		"db:drizzle:studio": "drizzle-kit studio",
		"db:drizzle:seed": "tsx drizzle/seed.ts",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "^7.3.4",
		"@googlemaps/google-maps-services-js": "^3.4.2",
		"@prisma/adapter-pg": "^7.4.1",
		"@prisma/client": "^7.4.0",
