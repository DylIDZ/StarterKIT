		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/multer": "^2.0.0",
		"@types/node": "^25.2.2",
		"@types/node-cron": "^3.0.11",
		"@types/nodemailer": "^7.0.11",
		"@types/pdfkit": "^0.17.5",
		"@types/qrcode": "^1.5.6",
		"@types/supertest": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@vitest/coverage-v8": "^3.2.4",
		"drizzle-kit": "^0.31.4",
		"pino-pretty": "^13.1.1",
